<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/gray"
              android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/collect_activity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px150"
        android:background="@color/colorPrimary"
        >

        <ImageView
            android:id="@+id/setting_activity_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px20"
            android:src="@mipmap/back"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="设置"
            android:textColor="@color/white"
            android:textSize="16sp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_setting_clearmemroy"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px100"
        android:layout_marginTop="@dimen/px60"
        android:background="@drawable/selector_setting_click"
        android:gravity="center_vertical"
        android:clickable="true"
        android:paddingLeft="@dimen/px20"
        android:text="清理缓存"
        android:textColor="#050505"
        android:textSize="@dimen/px40"/>

</LinearLayout>