<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/main_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/main_ct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:layout_scrollFlags="scroll"
            custom:titleEnabled="true">

            <com.daimajia.slider.library.SliderLayout
                android:id="@+id/main_fragment_slider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px600"
                custom:auto_cycle="true"
                custom:indicator_visibility="visible"
                custom:layout_scrollFlags="scroll"
                custom:layout_collapseMode="parallax"
                custom:pager_animation="Accordion"
                custom:pager_animation_span="1100">

            </com.daimajia.slider.library.SliderLayout>

        </android.support.design.widget.CollapsingToolbarLayout>

        <com.flyco.tablayout.SlidingTabLayout
            android:id="@+id/main_fragment_slidertab"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px150"
            custom:tl_indicator_color="#2C97DE"
            custom:tl_indicator_height="@dimen/px5"
            custom:tl_indicator_width="@dimen/px100"
            custom:tl_tab_space_equal="true"
            custom:tl_textBold="SELECT"
            custom:tl_textSelectColor="#2C97DE"
            custom:tl_textUnselectColor="#000000"
            custom:tl_textsize="@dimen/px35"
            custom:tl_underline_height="@dimen/px5">

        </com.flyco.tablayout.SlidingTabLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/main_fragment_vp_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        custom:layout_behavior="@string/appbar_scrolling_view_behavior">

    </android.support.v4.view.ViewPager>

</android.support.design.widget.CoordinatorLayout>


