<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px500"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/adapter_album_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px500"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/adapter_album_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/px60"
        android:layout_marginLeft="@dimen/px40"
        android:textColor="@color/white"
        android:textSize="@dimen/px50"/>


    <TextView
        android:id="@+id/adapter_album_title_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/px20"
        android:layout_marginLeft="@dimen/px40"
        android:text="今日更新:26"
        android:textColor="@color/white"
        android:textSize="@dimen/px30"/>

</RelativeLayout>