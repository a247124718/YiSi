<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px200"
        android:background="@color/colorAccent">

        <ImageView
            android:id="@+id/iv_chose"
            android:layout_width="@dimen/px60"
            android:layout_height="@dimen/px60"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px20"
            android:foregroundGravity="center_vertical"
            android:src="@mipmap/back"/>

        <ImageView
            android:id="@+id/iv_icon_view"
            android:layout_width="@dimen/px120"
            android:layout_height="@dimen/px120"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:transitionName="@string/trs_plant"/>


        <ImageView
            android:id="@+id/iv_collect"
            android:layout_width="@dimen/px50"
            android:layout_height="@dimen/px50"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px20"
            android:src="@mipmap/favorite_unselect"/>


    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_chose"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>