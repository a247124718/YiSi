<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <com.yisi.picture.picturemodel.view.PinchViewPager
        android:id="@+id/activity_operate_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:transitionName="@string/trs_plant_operate"
        android:layout_weight="1">

    </com.yisi.picture.picturemodel.view.PinchViewPager>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/activity_operate_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="1/20"
        android:textColor="@color/white"
        android:textSize="@dimen/px40"/>

    <ImageView
        android:id="@+id/iv_operate"
        android:layout_width="@dimen/px100"
        android:layout_height="@dimen/px70"
        android:layout_marginTop="@dimen/px120"
        android:layout_marginRight="@dimen/px80"
        android:layout_alignParentRight="true"
        android:scaleType="center"
        android:alpha="0.8"
        android:background="@drawable/shape_opera_text"
        android:src="@drawable/selector_opera_image"/>



</RelativeLayout>