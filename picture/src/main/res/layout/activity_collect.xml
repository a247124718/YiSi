<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:custom="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/mian_fragment_coor"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/main_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#FFFFFF"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/collect_activity_toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px150"
                android:background="@color/colorAccent"
                custom:layout_scrollFlags="scroll">

                <ImageView
                    android:id="@+id/collect_activity_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px20"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/back"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="我的收藏"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>

            </RelativeLayout>

            <com.flyco.tablayout.SlidingTabLayout
                android:id="@+id/collect_activity_slidertab"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px150"
                android:minHeight="@dimen/px150"
                custom:tl_indicator_color="#2C97DE"
                custom:tl_indicator_height="@dimen/px5"
                custom:tl_indicator_width="@dimen/px100"
                custom:tl_tab_space_equal="true"
                custom:tl_textBold="SELECT"
                custom:tl_textSelectColor="#2C97DE"
                custom:tl_textUnselectColor="#000000"
                custom:tl_textsize="@dimen/px35"
                custom:tl_underline_height="@dimen/px5">
            </com.flyco.tablayout.SlidingTabLayout>


        </android.support.design.widget.AppBarLayout>


        <android.support.v4.view.ViewPager
            android:id="@+id/collect_activity_vp_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            custom:layout_behavior="@string/appbar_scrolling_view_behavior">

        </android.support.v4.view.ViewPager>

    </android.support.design.widget.CoordinatorLayout>


</RelativeLayout>